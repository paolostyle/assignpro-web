{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "preserve",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/typings/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
